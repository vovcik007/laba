def textsorted(txt):
    tXxt = txt.replace(".", " ")
    text = txt.replace(",", " ")

    allWords = txt.split()
    allWordsSingle = {}
    for word in allWords:
        if len(word) > 3:
            allWordsSingle.update({word: allWords.count(word)})

    keysSorted = []
    for key in allWordsSingle:
        keysSorted.append(key)

    keysSorted.sort()

    for key in keysSorted:
        print(key)

def textcounted(txt):
    txt = txt.replace(".", " ")
    txt = txt.replace(",", " ")

    allWords = txt.split()
    allWordsSingle = {}

    for word in allWords:
        if len(word) > 3:
            allWordsSingle.update({word: allWords.count(word)})

    keysSorted = []
    for key in allWordsSingle:
        keysSorted.append(key)
    keysSorted.sort()

    for key in keysSorted:
        print(f"{key} - {allWordsSingle[key]}")

txt = input("\n\nEnter a text: ")
while True:
             action = input("Select an action(1/2): ")

             if action == 1:
                     textcounted(txt)
             elif action == 2:
                textsorted(txt)
