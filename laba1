from collections import Counter

action = input('Select action(1 or 2): ')
txt = input("text: ").lower()
txt = txt.replace(",", "")
txt = txt.replace(".", "")
splitted = txt.split()
result = {}

if action == 1:
    for i in splitted:
        if len(i)>3:
            c = Counter(splitted)
            cc: list[tuple[str, int]] = c.most_common(5)
            result.update(cc)
            print(result)
elif action == 2:
        sorty = splitted.sort(key=len)
        reversed = sorty.reverse()
        b = result.update(reversed)
        print(b)
